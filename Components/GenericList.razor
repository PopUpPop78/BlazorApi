@page "/genericlist"

<style>
    .card {
        background-color:#0d6efd;
        color: white;
    }
    .card:hover {
        opacity: 0.6;
        color: white;
    }
</style>

<div class="d-flex">
    <div class="col-3"><b>@Title</b></div>
    <div class="d-flex flex-wrap ms-2">
        @foreach (var item in Items)
        {
            <div class="view-select card me-1 px-1 mb-1" @onclick=@(()=>ViewGenericItem(item))>
                @item.Name
            </div>
        }
    </div>
</div>