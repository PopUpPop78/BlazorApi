@page "/characterView/{id}"

@if(character == null)
{
    <p><em>Loading...</em></p>    
}
else
{
    <div class="container py-4">
        <div class="row">    
            <div class="col-6 offset-3 col-sm-6 offset-sm-3 text-center"><img src="@character.Image" alt="@character.Name"></div>
            <div class="w-100 mt-3"></div>
            <div class="col-6 offset-3 col-sm-6 offset-sm-3 text-center"><h2>@character.Name</h2></div>
        </div>

        <div class="w-100 mt-3"></div>

        <div class="row">
            <div class="d-flex">
                <div class="col-3"><b>Gender</b></div>
                <div>@character.Gender</div>
            </div>
            <hr>
            <div class="d-flex">
                <div class="col-3"><b>Species</b></div>
                <div>@character.Species</div>
            </div>
            <hr>
            <div class="d-flex">
                <div class="col-3"><b>Species Subtype</b></div>
                @if(string.IsNullOrWhiteSpace(character.Type))
                {
                    <div>-</div>
                }
                else
                {
                    <div>@character.Type</div>
                }
            </div>
            <hr>
            <div class="d-flex">
                <div class="col-3"><b>Status</b></div>
                <div>@character.Status</div>
            </div>
            <hr>
            <div class="d-flex">
                <div class="col-3"><b>Origin</b></div>
                <div>@character.Origin?.Name</div>
            </div>
            <hr>
            <div class="d-flex">
                <div class="col-3"><b>Last Known Location</b></div>
                <div class="pb-2">
                    <div class="view-select badge bg-secondary" @onclick=@(() => ViewLocation(character.Location.Id))>
                        @character.Location?.Name
                    </div>
                </div>
            </div>
            <hr>
            <ChatGpt Question=@(character.AskChatGtp)></ChatGpt>
            <hr>
            <div class="d-flex">
                <div class="col-3"><b>Episodes</b></div>
                <div class="pb-2" style="margin-right:1px">
                    @foreach (var episode in character.Episodes)
                    {
                        <div class="view-select badge bg-secondary" @onclick=@(()=>ViewEpisode(episode.Id))>
                            @episode.Name
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
}